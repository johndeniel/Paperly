{
  "name": "paperly",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbopack --port 3002",
    "start": "next start --port 3002",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --check \"**/*.{js,jsx,ts,tsx}\"",
    "format-fix": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
     "prepare": "husky"
  },
  "dependencies": {
    "next": "15.3.1",
    "pg": "^8.15.6",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.11.14",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint . --ext .js,.jsx,.ts,.tsx",
    "*.{js,ts,jsx,tsx,css}": "prettier --check \"**/*.{js,jsx,ts,tsx}\""
  }
}
